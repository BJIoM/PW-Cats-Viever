<Button x:Class="PWCatsViewer.Desktop.ItemCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:data="clr-namespace:PWCatsViewer.Logic.Data;assembly=Logic"
        x:Name="ICard"
        mc:Ignorable="d"
        d:DesignHeight="60" d:DesignWidth="100">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <Label Content="{Binding Path=Item.Server, ElementName=ICard}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontFamily="Century Gothic"
               FontSize="8"
               Grid.Row="0" />

        <Label Content="{Binding Path=Item.Name, ElementName=ICard}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontFamily="Century Gothic"
               FontSize="16"
               Grid.Row="1" />
    </Grid>
</Button>